<main class="auth-page">
  <section class="auth-card">
    <%- messages() %>
    <% if (errors) { %>
        <ul class="notice">
        <% errors.array().forEach(error => { %>
        <li><%= error.msg %></li>
        <%  }) %>
        </ul>
    <% } %>
    <h2 class="auth-title"><%=title%></h2>
    <form action="/contact-us" method="post" class="auth-form">
      
      <div class="auth-field">
        <label for="contact_name">Your Name</label>
        <input 
          type="text" 
          id="contact_name" 
          name="contact_name" 
          required
          value="<%= locals.contact_name %>"
        />
      </div>

      <div class="auth-field">
        <label for="contact_email">Email Address</label>
        <input 
          type="email" 
          id="contact_email" 
          name="contact_email" 
          required
          placeholder="Enter a valid email address"
          value="<%= locals.contact_email %>"
        />
      </div>

      <div class="auth-field">
        <label for="contact_message">Message</label>
        <textarea 
          id="contact_message" 
          name="contact_message" 
          rows="5" 
          required
        ><%= locals.contact_message %></textarea>
      </div>

      <button type="submit" class="auth-button-left">Send Message</button>
    </form>

  </section>
</main>
