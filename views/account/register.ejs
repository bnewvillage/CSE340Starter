<main class="auth-page">
  <section class="auth-card">
    <h2 class="auth-title">Register</h2>

    <form action="/account/register" method="post" class="auth-form">

     
      <div class="auth-field">
        <label for="account_firstname">First Name</label>
        <input type="text" id="account_firstname" name="account_firstname" required />
      </div>

      
      <div class="auth-field">
        <label for="account_lastname">Last Name</label>
        <input type="text" id="account_lastname" name="account_lastname" required />
      </div>

     
      <div class="auth-field">
        <label for="account_email">Email Address</label>
        <input type="email" id="account_email" name="account_email" required />
      </div>

      
      <div class="auth-field">
        <label for="account_password">Password</label>
        <input 
          type="password" 
          id="account_password" 
          name="account_password" 
          required
          minlength="12"
        />
        <ul class="password-requirements">
          <li>Minimum 12 characters</li>
          <li>At least 1 capital letter</li>
          <li>At least 1 number</li>
          <li>At least 1 special character</li>
        </ul>
      </div>

      <button type="submit" class="auth-button-left">Register</button>

    </form>
  </section>
</main>
