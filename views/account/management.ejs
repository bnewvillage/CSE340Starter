        <ul class="notice">
        <% errors.array().forEach(error => { %>
        <li><%= error.msg %></li>
        <%  }) %>
        </ul>
    <% } %>

    <div class="auth-content">
      <p class="auth-message">You're logged in âœ…</p>
    </div>

    <p class="auth-footer-text">
