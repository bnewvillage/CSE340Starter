<main class="add-details-page">
  <section class="add-details-card">
    <h2 class="add-details-title"><%- title %></h2>
    <%- messages() %> <% if (errors) { %>
    <ul class="notice">
      <% errors.array().forEach(error => { %>
      <li><%= error.msg %></li>
      <% }) %>
    </ul>
    <% } %>

    <form action="/inv/new_inventory" method="post" class="add-details-form">
      <!-- CLASSIFICATION DROPDOWN FROM HELPER -->
      <div class="add-details-field">
        <label for="classificationList">Classification</label>
        <%- classificationList %>
      </div>

      <!-- MAKE -->
      <div class="add-details-field">
        <label for="inv_make">Make</label>
        <input
          type="text"
          id="inv_make"
          name="inv_make"
          placeholder="Brand or manufacturer name"
          required
          value="<%= locals.inv_make || '' %>"
        />
      </div>

      <!-- MODEL -->
      <div class="add-details-field">
        <label for="inv_model">Model</label>
        <input
          type="text"
          id="inv_model"
          name="inv_model"
          placeholder="Specific model name or series"
          required
          value="<%= locals.inv_model || '' %>"
        />
      </div>

      <!-- YEAR -->
      <div class="add-details-field">
        <label for="inv_year">Year</label>
        <input
          type="number"
          id="inv_year"
          name="inv_year"
          min="1000"
          max="9999"
          placeholder="4-digit production year"
          required
          value="<%= locals.inv_year || '' %>"
        />
      </div>

      <!-- DESCRIPTION -->
      <div class="add-details-field">
        <label for="inv_description">Description</label>
        <textarea
          id="inv_description"
          name="inv_description"
          placeholder="Key features, condition, or notable details"
          required
        >
<%= locals.inv_description || '' %></textarea
        >
      </div>

      <!-- PRICE -->
      <div class="add-details-field">
        <label for="inv_price">Price</label>
        <input
          type="number"
          step="0.01"
          id="inv_price"
          name="inv_price"
          placeholder="Total asking price"
          required
          value="<%= locals.inv_price || '' %>"
        />
      </div>

      <!-- MILES -->
      <div class="add-details-field">
        <label for="inv_miles">Miles</label>
        <input
          type="number"
          id="inv_miles"
          name="inv_miles"
          placeholder="Current mileage on the vehicle"
          required
          value="<%= locals.inv_miles || '' %>"
        />
      </div>

      <!-- COLOR -->
      <div class="add-details-field">
        <label for="inv_color">Color</label>
        <input
          type="text"
          id="inv_color"
          name="inv_color"
          placeholder="Primary exterior color"
          required
          value="<%= locals.inv_color || '' %>"
        />
      </div>

      <button type="submit" class="auth-button-left">Add Vehicle</button>
    </form>
  </section>
</main>
